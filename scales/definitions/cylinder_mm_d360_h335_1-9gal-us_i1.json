{
  "$schema": "./schemas/scale-config",
  "scale-config": {
    "containerForm": "cylinder",
    "lengthUnit": "mm",
    "volumeUnit": "gal (U.S.)",
    "diameter": 360,
    "height": 335,
    "minVolume": 1,
    "maxVolume": 9,
    "output": "./scales/svgs/{0}.svg",
    "description": "Scale for 360mm diameter cylindric container. 1-9 gal (U.S) in 1 gal (U.S) intervals with text every 1 gal (U.S).",
    "sucessfullyAppliedTo": "-",
    "requiresTransferTape": false,
    "graduationMarkSettings": [
      {
        "interval": 1,
        "length": 25,
        "height": 1.5,
        "textTemplate": "{0} gal",
        "font": {
          "family": "./fonts/BigShoulderStencilText/static/BigShouldersStencilText-ExtraBold.ttf",
          "size": 8,
          "offsetX": -2,
          "offsetY": -7,
          "textAlignment": "Right"
        }
      }
    ]
  }
}
